<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPF"
        xmlns:FunwayControls="clr-namespace:FunwayControls;assembly=DreamTeam" x:Class="TestWPF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="FileUploadButton" Content="Upload File" HorizontalAlignment="Center" VerticalAlignment="Top" Height="46" Width="172" Click="FileUploadButton_Click" Margin="0,95,0,0"/>
        <Button x:Name="FileDownloadButton" Content="Download File" HorizontalAlignment="Center" VerticalAlignment="Top" Height="46" Width="172" Click="FileDownloadButton_Click" Margin="0,217,0,0"/>
        <Label x:Name="UploadLabel" Content="Upload Label" HorizontalAlignment="Center" Margin="0,156,0,0" VerticalAlignment="Top" Height="43" Width="780"/>
        <Label x:Name="DownloadLabel" Content="Download Label" HorizontalAlignment="Center" Margin="0,288,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.673,0.579" Height="72" Width="780"/>
        <Button x:Name="ClearCache" Content="Clear User Cache" HorizontalAlignment="Center" VerticalAlignment="Top" Height="46" Width="172" Click="ClearCache_Click" Margin="0,360,0,0"/>

    </Grid>
</Window>
